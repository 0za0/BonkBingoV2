<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="125" d:DesignHeight="125"
             x:Class="BingoOnline.Views.BingoButton">
	<Button Background="{Binding ButtonColor}" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Command="{Binding ButtonPress}">
		<TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
	</Button>
</UserControl>
